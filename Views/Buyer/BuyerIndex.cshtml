@model IEnumerable<EmartMVC.Models.Buyer>

@{
    ViewData["Title"] = "BuyerIndex";
}

<h1>BuyerIndex</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Mobileno)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.Mobileno)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



